<div class="row justify-content-center">
  <div class="col-md-6">
    <h2>Create New Request</h2>
    <%= simple_form_for @translation do |f| %>
      <div class="form-group">
        <%= f.label :"Enter String" %>
        <%= f.text_field :string_key,
                         class: "form-control",
                         required: true,
                         autofocus: true,
                         input_html: {autocomplete: "string_key"},
                         placeholder: "Enter a word or a Complete Sentence"
        %>
      </div>
      <%= f.button :submit, "Submit Request", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
